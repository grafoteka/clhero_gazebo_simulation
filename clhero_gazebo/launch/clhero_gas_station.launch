<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="world" default="gas_station.world"/>
  <arg name="rviz_gui" default="true"/>

  <!-- clhero_control launch file -->
  <!--include file="$(find clhero_sim_controllers)/launch/clhero_sim_controllers.launch" /-->

  <!-- launch pad -->
  <!--include file="$(find clhero_pad)/launch/clhero_pad.launch" /-->

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find clhero_gazebo)/worlds/$(arg world)"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <param name="robot_description"
         command="$(find xacro)/xacro --inorder '$(find clhero_description)/robots/clhero.urdf.xacro'" />
         
  <!--node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/joint_states" />
  </node-->

  <!-- Call a python script to the run a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model clhero -param robot_description">
  </node>

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" if="$(arg rviz_gui)" output="screen" args="-d $(find clhero_gazebo)/rviz/clhero_rviz.rviz"/>

</launch>
